{
  "routes": [
    {
      "route": "/login",
      "serve": "/.auth/login/github"
    },
    {
      "route": "/logout",
      "serve": "/.auth/logout"
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/redirects/*",
      "serve": "/redirectTarget",
      "statusCode": 302
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "platformErrorOverrides": [
    {
      "errorType": "NotFound",
      "serve": "/notFound.html",
      "statusCode": 404
    }
  ],
  "mimeTypes": {
    ".appx": "application/appx",
    "json": "application/json"
  },
  "headersByPath": [
    {
      "path": "/restricted/*",
      "headers": {
        "x-ms-client": "random",
        "cache-control": "max-age 30000; must-revlidate"
      }
    },
    {
      "path": "/*",
      "headers": {
        "Feature-Policy": "accelerometer 'none'; camera 'self'; geolocation 'none'; gyroscope 'none'; magnetometer 'none'; microphone 'self'; payment 'none'; usb 'none'"
      }
    }
  ]
}
